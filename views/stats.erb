<div class="grid">
  <div>
    <h2>Incoming</h2>
    <dl class="right">
      <dt>Total</dt>
      <dd><%= number_to_delimited(incoming_total) %></dd>

      <dt>Range</dt>
      <dd><%= format_duration(incoming_range) %></dd>

      <dt>Throughput</dt>
      <dd><%= number_to_delimited(incoming_throughput) %> /min</dd>
    </dl>
  </div>

  <div>
    <h2>Outgoing</h2>
    <dl class="right">
      <dt>Queued</dt>
      <dd><%= number_to_delimited(outgoing_total) %></dd>

      <dt>Queue age (oldest)</dt>
      <dd><%= format_duration(queue_oldest_age) %></dd>
    </dl>
  </div>

  <div>
    <h2>Measurements & Fields</h2>
    <dl class="left">
      <% incoming_measurement_fields_grouped.each do |measurement, fields| %>
        <dt><%= measurement %></dt>
        <dd><%= fields.join(', ') %></dd>
      <% end %>
    </dl>
  </div>

  <div>
    <h2>CPU</h2>
    <dl class="right">
      <dt>Usage</dt>
      <dd><%= cpu_usage %></dd>

      <dt>Threads</dt>
      <dd><%= thread_count %></dd>
    </dl>

    <h2>RAM</h2>
    <dl class="right">
      <dt>Usage</dt>
      <dd><%= memory_usage %></dd>
    </dl>

    <h2>Disk</h2>
    <dl class="right">
      <dt>SQLite Database</dt>
      <dd><%= database_size %></dd>

      <dt>Free</dt>
      <dd><%= disk_free %></dd>
    </dl>

    <h2>Uptime</h2>
    <dl class="right">
      <dt>Container</dt>
      <dd><%= container_uptime %></dd>

      <dt>System</dt>
      <dd><%= system_uptime %></dd>
    </dl>
  </div>
</div>
