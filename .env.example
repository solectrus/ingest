# Timezone
TZ=Europe/Berlin

# Stats page authentication
STATS_USERNAME=admin
STATS_PASSWORD=password

# InfluxDB connection (for production use external InfluxDB)
INFLUX_HOST=influxdb
INFLUX_SCHEMA=http
INFLUX_PORT=8086

# Sensor configuration (format: MEASUREMENT:FIELD)
INFLUX_SENSOR_INVERTER_POWER=SENEC:inverter_power
INFLUX_SENSOR_GRID_IMPORT_POWER=SENEC:grid_power_plus
INFLUX_SENSOR_BATTERY_DISCHARGING_POWER=SENEC:bat_power_minus
INFLUX_SENSOR_BATTERY_CHARGING_POWER=SENEC:bat_power_plus
INFLUX_SENSOR_GRID_EXPORT_POWER=SENEC:grid_power_minus
INFLUX_SENSOR_WALLBOX_POWER=SENEC:wallbox_charge_power
INFLUX_SENSOR_HEATPUMP_POWER=Consumer:power
INFLUX_SENSOR_HOUSE_POWER=SENEC:house_power

# Calculated house power destination
INFLUX_SENSOR_HOUSE_POWER_CALCULATED=Calculated:house_power

# Exclude from house power calculation (comma-separated, e.g., HEATPUMP_POWER,WALLBOX_POWER)
INFLUX_EXCLUDE_FROM_HOUSE_POWER=HEATPUMP_POWER

# InfluxDB init (only for local testing with docker-compose profile)
INFLUX_INIT_USERNAME=admin
INFLUX_INIT_PASSWORD=adminpassword
INFLUX_INIT_ORG=solectrus
INFLUX_INIT_BUCKET=solectrus
INFLUX_INIT_TOKEN=my-super-secret-token
